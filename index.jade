    script(src="js/models/alertMsg.js")
    script(src="js/models/item.js")
    script(src="js/models/itemList.js")
    
    script(src="js/views/itemList.js")
    script(src="js/views/formModal.js")
    script(src="js/views/alertMsg.js")
    script(src="js/views/modalWindow.js")
