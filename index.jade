doctype html
html
    head
        meta(charset="utf8")
        title Data-grid
        
        link(href="css/app.css" rel="stylesheet" type="text/css")
        link(rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css")
    body
        section(class="modal-view-container")
            
        section(class="data-grid")
            div(class="data-settings clearfix")
                div(class="filter")
                div(class="controls")
            table
                thead
                    tr
                        th(class="sortable asc" data-order="asc" title="Click to sort") Date
                        th(class="sortable asc" data-order="asc" title="Click to sort") Name
                        th(class="sortable asc" data-order="asc" title="Click to sort") Price
                        th Actions
                tbody
            
                    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.js")
